<TaskMasterRoot>:
    orientation: 'vertical'
    Label:
        text: 'Task Master'
    TextInput:
        id: task_input
        hint_text: 'Enter your task'
    Spinner:
        id: importance_spinner
        text: 'Select Importance'
        values: ['Low', 'Medium', 'High']
    Button:
        text: 'Add Task'
        on_press: app.add_task()
    ScrollView:
        GridLayout:
            id: task_list_grid
            cols: 1
            spacing: 10  # Increased spacing between task items

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'High Importance Tasks'
        ScrollView:
            GridLayout:
                id: high_priority_tasks_grid
                cols: 1
                spacing: 25  # Increased spacing between task items

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Medium Importance Tasks'
        ScrollView:
            GridLayout:
                id: medium_priority_tasks_grid
                cols: 1
                spacing: 25  # Increased spacing between task items

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Low Importance Tasks'
        ScrollView:
            GridLayout:
                id: low_priority_tasks_grid
                cols: 1
                spacing: 25  # Increased spacing between task items
